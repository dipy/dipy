#! /usr/bin/env python

from dipy.workflows.denoise import nlmeans_flow
from dipy.fixes import argparse as arg

parser = arg.ArgumentParser()

parser.add_argument('input', action='store',
                    help='Path to the volume on which to apply brain '
                         'segmentation. You can use wildcards on the path'
                         'to process multiple volumes at once.')

parser.add_argument('--sigma', type=int, default=0,
                    help='The sigma used for NLMEANS.')

parser.add_argument('--out_dir', type=str, default='',
                    help='The output direcotry where results are saved.')

if __name__ == "__main__":
    params = parser.parse_args()
    nlmeans_flow(params.input, params.sigma, params.out_dir)
